{
  "name": "omega-pcf-operator",
  "version": "1.2.2",
  "description": "The Ω_PCF Operator and the Primitive Structure of the Complex Plane",
  "type": "module",
  "scripts": {
    "type-check": "tsc --noEmit",
    "generate:figures": "cd scripts/figures && uv run python main.py",
    "generate:figures:list": "cd scripts/figures && uv run python main.py --list",
    "build": "pnpm exec tsx scripts/build.ts",
    "build:full": "pnpm run generate:figures && pnpm run build",
    "release": "dotenv -e .env -- release-it",
    "release:dry-run": "pnpm run build:full && dotenv -e .env -- release-it --dry-run"
  },
  "packageManager": "pnpm@9.0.0",
  "private": true,
  "devDependencies": {
    "@release-it/bumper": "^7.0.0",
    "@release-it/conventional-changelog": "^10.0.2",
    "@types/node": "^20.0.0",
    "dotenv-cli": "^11.0.0",
    "release-it": "^19.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "yaml": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/omega-pcf/01-primitive-complex-field.git"
  },
  "keywords": [
    "Riemann hypothesis",
    "Hilbert-Pólya conjecture",
    "L-functions",
    "Self-adjoint operators",
    "Random matrix theory",
    "Zeta function zeros",
    "Mersenne primes",
    "Modular spaces"
  ],
  "license": "MIT"
}
